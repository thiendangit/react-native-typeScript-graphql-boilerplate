{
  "root": true,
  "extends": "@react-native-community",
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "settings": {
    "import/resolver": {
      "babel-module": {
        "alias": {
          "@utils": "./src/lib/utils",
          "@screens": "./src/screens",
          "@common": "./src/common",
          "@store": "./src/store",
          "@navigation": "./src/navigation",
          "@components": "./src/components",
          "@lib": "./src/lib",
          "@assets": "./src/assets",
          "@themes": "./src/themes",
          "@containers": "./src/containers",
          "@models": "./src/models"
        }
      }
    }
  }
}
